#!/usr/bin/perl
#
# combine les programmes unix head et grep
#
# exemple : c'est utile de faire un ps axuw | grep toto
#           mais en faisant Ã§a on perd la signification 
#           des colonnes
#

use strict;
use warnings;
use Getopt::Long qw(:config bundling);

my $n = 10; # pour head -n
my $v =  0; # pour grep -v
my $i =  0; # pour grep -i

my $result = GetOptions("n=i" => \$n,
                        "v"   => \$v,
                        "i"   => \$i, );

my $s = shift @ARGV;

while(<>) {
  print;
  last unless --$n;
}

my $re = $i ? qr/$s/i : qr/$s/;

print grep { /$re/ xor $v } $_ while(<>);

